
@{
    ViewBag.Title = "Recuperar Contraseña";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}



<form method="post" action="/Home/RecuperaContraseña">
    <div class="wrapper wrapper-login">
        <div class="container container-login animated fadeIn">
            <h3 class="text-center">Recuperación de Contraseña</h3>
            <div class="login-form">
                <p>Agregue su correo para enviarle su contraseña y poder accesar de nuevo la aplicación.</p>
                <div class="form-group">
                    <label for="clave" class="placeholder"><b>Correo</b></label>
                    <input id="clave" name="clave" type="text" class="form-control" required autocomplete="off">
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary col-md-5 float-right mt-3 mt-sm-0 fw-bold">Recuperar</button>
                    <br><br><br><a href="/" class="link float-right">Regresar</a>
                </div>
            </div>
        </div>
    </div>
</form>