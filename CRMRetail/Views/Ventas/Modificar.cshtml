                        <select disabled class="form-control" id="Tipo" name="Tipo" onchange="ObtenerTarjetas();">
                            <option value=""></option>
                            @foreach (var item2 in CRMRetail.Datos.Catalogos.Seleccionar("TipoVenta"))
                            {
