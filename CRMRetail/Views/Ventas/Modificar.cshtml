                        <select disabled class="form-control" id="TipoEntrega" name="TipoEntrega" onchange="AgregarFechaEntrega();">
                            <option value=""></option>
                            @foreach (var item3 in CRMRetail.Datos.Catalogos.Seleccionar("TipoEntrega"))
